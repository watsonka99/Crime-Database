<%- include ("./partials/header") %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-cog"></i> Update Account
        </h1>
        <%- include('partials/messages'); %>
        <form action="/users/<%= user._id %>/edit" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof user.name != 'undefined' ? user.name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof user.email != 'undefined' ? user.email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
            />
          </div>
            <% if(role == "admin") { %>
              <div class="form-group">
                <label for="role">User Role</label>
                <select id="role" name="role" class="custom-select" required>
                  <option value="user">User</option>
                  <option value="admin">Admin</option>
                  <option value="manager">Information Manager</option>
                </select>
            <% } %>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
  <%- include ("./partials/footer") %>