    <!-- Nav bar for all webpages once user has logged in. Depending on the user type, different webpages are available to navigate to  -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/users/home">P1-Mopi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if(currentUser){%>
                    
                      <li class="nav-item active">
                        <a class="nav-link" href="/crimes">Crimes</a>
                      </li>
                      <li class="nav-item active">
                        <a class="nav-link" href="/people">People</a>
                      </li>
                      <li class="nav-item active">
                        <a class="nav-link" href="/transaction">Transaction</a>
                      </li>

                      <% if(role == "manager") { %>
                        <li class="nav-item active">
                          <a class="nav-link" href="/mopi">Mopi</a>
                        </li>
                        <li class="nav-item active">
                          <a class="nav-link" href="/mopi/review">Review</a>
                        </li>
                      <% } %>
                      
                </ul>
                <span class="navbar-center navbar-text">
                  <small><small style="color:red;">OFFICIAL-SENSITIVE</small></small>
                </span> 
                
                <ul class="navbar-nav me-right mb-2 mb-lg-0">
                  <li class="nav-item active">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="/account">Account</a>
                </li>
        
                    <li class="nav-item active">
                        <a class="nav-link" href="/users/logout">Logout</a>
                    </li>              
                <%} else if (!currentUser) {%>
                  <li class="nav-item active">
                    <a class="nav-link" href="/users/login">Login</a>
                </li> 
                <%}%>
                </ul>

                </div>
              </div>
          </nav>
          <br>
          <!-- error messages -->
          <% if(typeof success_msg != 'undefined' && success_msg != '') { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
            </div>
        <% } %>
        
        <% if(typeof error_msg != 'undefined' && error_msg != '') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error_msg %>
            </div>
        <% } %>
        
        <% if(typeof error != 'undefined' && error != '') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error %>
            </div>
        <% } %>
        